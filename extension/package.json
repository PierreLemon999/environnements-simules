{
  "name": "extension",
  "version": "0.12.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "bump": "npx tsx scripts/bump-version.ts",
    "bump:minor": "npx tsx scripts/bump-version.ts minor",
    "bump:major": "npx tsx scripts/bump-version.ts major",
    "prebuild": "npx tsx scripts/bump-version.ts",
    "build": "vite build",
    "preview": "vite build && echo 'Load dist/ folder as unpacked extension in chrome://extensions'",
    "test": "npx tsx tests/test-run.ts --all",
    "test:login": "npx tsx tests/test-run.ts --step=login",
    "test:detect": "npx tsx tests/test-run.ts --step=detect",
    "test:scan": "npx tsx tests/test-run.ts --step=scan,detect",
    "test:capture": "npx tsx tests/test-run.ts --step=capture",
    "test:fresh": "npx tsx tests/test-run.ts --all --fresh-profile"
  },
  "dependencies": {
    "svelte": "^5.51.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@browserbasehq/stagehand": "^3.1.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/chrome": "^0.1.37",
    "autoprefixer": "^10.4.21",
    "playwright": "^1.58.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  }
}
